{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"rootDir": "./src",
		"outDir": "dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"useUnknownInCatchVariables": false,
		"strict": true,
		"skipLibCheck": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "strictPropertyInitialization": false
	},
	"lib": ["es2015"],
	"exclude": [
		"node_modules"
	],
	"include": [
		"./src/**/*.ts"
	]
}